#VRML V2.0 utf8



PROTO SliderPot [
  eventOut SFFloat value_changed
  field    SFFloat scaleFactor 1.0
  field    SFFloat centerDetent 0.05
  field    SFFloat initialValue 0.0
]
{
  Transform {
    translation 0 0 -0.15
    scale 0.003 0.003 0.003
    children [
  
      # Bezel
      Shape {
	appearance Appearance {
	  material Material {
	    diffuseColor 0.85 0.85 0.1
	    specularColor 1 1 1
	    shininess 0.3
	  }
	}
	geometry IndexedFaceSet {
	  coord Coordinate {
	    point [
	      -1.5 -5 0, -0.25 -5 0, 0.25 -5 0, 1.5 -5 0,
	      -0.25 -4 0, 0.25 -4 0, -0.25 4 0, 0.25 4 0,
	      -1.5 5 0, -0.25 5 0, 0.25 5 0, 1.5 5 0
	    ]
	  }
	  coordIndex [
	    0 1 9 8 -1, 2 3 11 10 -1,
	    1 2 5 4 -1, 6 7 10 9 -1
	  ]
	}
      }
      DEF Handle Transform {
	children [
	  # A plane sensor is attached to the handle
	  DEF PS PlaneSensor {
	    maxPosition 0 4
	    minPosition 0 -4
	  }
	  Shape {
	    appearance Appearance {
	      material Material {
		diffuseColor 0.55 0.47 0.14
		specularColor 0.75 0.67 0.34
		shininess 0.3
	      }
	    }
	    geometry Box { }
	  }
	]
      }
      # Display
      Transform {
	translation 0 6 0
	children [
	  Shape {
	    appearance Appearance {
	      material Material {
		diffuseColor 1 1 1
	      }
	    }
	    geometry DEF Display Text {
	      string "0"
	      fontStyle FontStyle {
		family "SANS"
		style "BOLD"
		justify "MIDDLE"
		size 2
	      }
	    }
	  }
	]
      }

    ]
    
  }
}

